---
import { joinClasses } from '../utils/joinClasses';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faChevronDown } from '@fortawesome/free-solid-svg-icons';

type Props = {
    classes: string;
    styles: string;
    label: string;
    url: string;
};

const { classes, styles, label, url } = Astro.props;
const allClasses = joinClasses(classes, 'group relative');
---

<li class={allClasses} style={styles}>
    <a href={url}>
        {label} <FontAwesomeIcon icon={faChevronDown} className="pl-1 text-xs" />
    </a>
    <ul
        class="hidden group-hover:block absolute top-full right-0 text-right whitespace-nowrap bg-event-horizon py-2 [&_a]:px-4 [&_a]:py-1 [&_a]:block"
    >
        <slot />
    </ul>
</li>
