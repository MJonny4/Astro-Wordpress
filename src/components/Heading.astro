---
import type { HTMLTag } from 'astro/types';
type Props = {
    classes: string;
    styles: string;
    level: 1 | 2 | 3 | 4 | 5 | 6;
    content: string;
    transitionName: string;
};

const { level, styles, classes, content, transitionName } = Astro.props;
const Element: HTMLTag = `h${level}`;
---

{
    !!transitionName && (
        <Element
            set:html={content}
            style={styles}
            class={classes}
            transition:name={transitionName}
        />
    )
}
{
    !transitionName && (
        <Element set:html={content} style={styles} class={classes} />
    )
}
